<h2>Lista de postagens:</h2>
<hr>
<a href="/admin/postagens/add"><button class="btn btn-success">Nova postagem</button></a>

{{#each posts}}
    <div class="card mt-4">
        <div class="card-body">
            <div class="row">
                <div class="col-12 col-sm col-md col-lg col-xl">
                    <h4>{{title}}</h4>
                    <p>Descrição: {{description}}</p>
                    <small>Data: {{date}}</small><br/>
                    <small>Categoria: {{category.name}}</small>
                </div>
                <div class="col col-sm-3 col-md-3 col-lg-3 col-xl-3">
                    <a href="/admin/postagens/edit/{{_id}}"><button class="btn btn-success mt-3" style="width: 78px;">Editar</button></a>
                    <a href="/admin/postagens/deletar/{{_id}}"><button class="btn btn-danger mt-3" >Deletar</button></a>
                </div>
            </div>
        </div>
    </div>
{{else}}
    <h3 class="mt-4">Nenhuma postagem disponível!</h3>
{{/each}}